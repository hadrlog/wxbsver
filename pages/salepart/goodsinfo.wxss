.search_head{
  width: 100%;
  height: 80rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.seinp{
  margin-left: 30rpx;
  background-color: whitesmoke;
  margin-right: 30rpx;
  text-align: center;
  border-radius: 20rpx;
  width: 690rpx;
  font-size: 24rpx
  
}
.seinp:-moz-placeholder{
  font-size: 24rpx;
}
.content_view{
  width: 100%;
  height: auto;
  background-color: greenyellow;
  margin-top: 2rpx;
  border-top: 1rpx solid lightgray;
}
.categroy-left {
  float: left;
  width: 160rpx;
  height: 1130rpx;
  /* border-right: 1px solid #ddd; */
  background-color: whitesmoke;
  box-sizing: border-box;
}
.categroy-left .cate-list {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  /* border-left: 3px solid #fff; */
  font-size: 24rpx;
}

.categroy-left .cate-list.on {
  color: #FF4500;
  /* border-color: #ab956d; */
  font-size: 24rpx;
  background-color: white;
}

.categroy-right {
  float: right;
  width: 590rpx;
   height: 1130rpx; 
  background-color: white;
  overflow: hidden;
}

.cate-box {
    display: flex;
    flex-direction: row;
    box-sizing: border-box;
    border-bottom: 1px solid whitesmoke;
    align-items: center;
}

.cate-box .cate-banner image {
  margin: 5px;
  width: 180rpx;
  height: 180rpx;
}

.cate-title {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  height: auto;
}
.trs{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.rest{
  font-size: 22rpx;
  float: left;
  flex-grow: 1;
  color: #1E90FF;
}
.pname{
  font-size: 24rpx;
  color: black;
  /* font-family: "STXihei";  */
}
.moey{
  margin-top: 8rpx;
  font-size: 14px;
  font-family: "STXihei"; 
  color:  red;
  font-weight: 700;
}
.tupian{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
